--- a/pixman/pixman.h
+++ b/pixman/pixman.h
@@ -863,6 +863,7 @@ struct pixman_indexed
 
 /* HACK: Use maximum value to avoid conflict */
 #define PIXMAN_TYPE_NV12	0x3f
